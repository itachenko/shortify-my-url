- var title = "Shortify My URL"
html
    head
        link(rel='stylesheet', href='/stylesheets/style.css', type='text/css')
        title= title
    body
        header
            h1= title
        form(action="/", method="POST")
            input(type='text', class='inputBox', name='url', placeholder='Put your long URL here')
            input(type='submit', class='btn-submit', value='Make it short!')
        if error
            span #{error}
        if result
            span Your short url is: #{result}
        if count > 0
            footer
                p We've already shortified #{count} URLs
script
    include ../public/script.js
