  "license": "MIT",
  "dependencies": {
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "joi": "17.2.1",
    "nanoid": "3.1.12",
    "pug": "3.0.0",
    "redis": "3.0.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/joi": "^14.3.4",
    "@types/ncp": "^2.0.4",
    "@types/node": "^14.14.2",
    "@types/redis": "^2.8.28",
    "ncp": "^2.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
