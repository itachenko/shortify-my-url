{
  "name": "shortify-my-url",
  "version": "1.0.0",
  "description": "Simple URL shortener.",
  "main": "build/server.js",
  "scripts": {
    "postinstall": "tsc && npm run copy:files",
    "start": "node build/server.js",
    "copy:files": "ts-node tools/copyfiles.ts",
    "dev": "nodemon src/server.ts"
  },
  "keywords": [
    "express.ls",
    "redis",
    "pug"
